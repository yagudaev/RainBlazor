@page "/todo"

<h3>Todo (@todos.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach(var todo in todos) { 
        <li>
	        <input @bind="todo.IsDone" type="checkbox" />
            @if(todo.IsDone) {
                <span style="text-decoration: line-through;">@todo.Title</span>
            } else { 
			    <input @bind="todo.Title" />
		    }
		</li>
    }
</ul>
<input placeholder="Something todo..." @bind="newTodo" @onkeyup="SubmitOnEnter" />
<butotn @onclick="AddTodo">Add todo</butotn>

@code {
    private IList<TodoItem> todos = new List<TodoItem>();
    private string newTodo;

    private void AddTodo() {
        if (string.IsNullOrWhiteSpace(newTodo)) { return; }

        todos.Add(new TodoItem { Title = newTodo });
        newTodo = "";
    }

    private void SubmitOnEnter(KeyboardEventArgs eventArgs) {
        if (eventArgs.Key == "Enter") { AddTodo(); }
    }
}
